{
  "id": "payment_epay",
  "name": "易支付",
  "version": "1.0.0",
  "type": "payment",
  "author": {"name": "LecFaka", "url": ""},
  "description": "支持所有易支付兼容接口，包括支付宝、微信支付、QQ钱包通道",
  "icon": null,
  "min_app_version": "1.0.0",
  "license_required": false,
  "price": 0,
  "backend": {
    "entry": "handler:EpayPaymentPlugin",
    "hooks": [],
    "routes": false,
    "models": false
  },
  "frontend": {
    "entry": null
  },
  "config_schema": {
    "url": {
      "type": "string",
      "label": "接口地址",
      "required": true,
      "placeholder": "https://pay.example.com"
    },
    "pid": {
      "type": "string",
      "label": "商户ID",
      "required": true
    },
    "key": {
      "type": "string",
      "label": "商户密钥",
      "required": true,
      "encrypted": true
    },
    "use_mapi": {
      "type": "boolean",
      "label": "使用MAPI接口",
      "default": false
    }
  },
  "changelog": {
    "1.0.0": "从核心代码迁移为插件"
  }
}
